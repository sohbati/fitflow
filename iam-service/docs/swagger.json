                },
                "role": {
                    "type": "string"
                }
            }
        },
        "role.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "role.SuccessResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "message": {
                    "type": "string"
                }
            }
        },
        "role.UpdateRoleRequest": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
