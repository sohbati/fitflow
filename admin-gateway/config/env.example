# FitFlow APISIX Environment Configuration
# Copy this file to /etc/apisix.env and customize for your environment

# Admin API Key (change this in production!)
APISIX_ADMIN_KEY=fitflow-admin-key

# ETCD Configuration
ETCD_HOST=http://127.0.0.1:2379

# APISIX Gateway Configuration
APISIX_NODE_PORT=9080
APISIX_ALLOW_ADMIN=127.0.0.1

# Debug Settings (set to true for development)
APISIX_DEBUG=false
APISIX_DEV_MODE=false
APISIX_SERVER_TOKENS=false

# Nginx Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_ERROR_LOG=/var/log/apisix/error.log
NGINX_PID=/var/run/apisix.pid
